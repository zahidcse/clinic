- var theme_customizer      = true;
- var tooltip               = true;
- var dropzone              = true;
- var sidebar               = true;
- var slick                 = true;
- var header_slider         = true;
- var animate               = true;
- var scrollbar             = true;
- var filepond              = true;
include ../../components/mixin
doctype html
html(lang='en')
  include ../../components/header-files
  body
    include ../../components/loader
    include ../../components/taptop
    // page-wrapper Start
    #pageWrapper.page-wrapper.compact-wrapper
      .page-header.row
        +breadcrumb(['Bonus Ui','Dropzone'],'Dropzone')
        include ../../components/header
      // Page Body Start
      .page-body-wrapper
        include ../../components/sidebar
        .page-body
          // Container-fluid starts
          .container-fluid
            .row
              .col-lg-6
                .card
                  .card-header
                    h4 Default File Upload
                    p.f-m-light.mt-1
                      | We use the create method to turn a
                      code  &lt;input type="file"&gt;
                      |  into a FilePond drop area.
                      code [https://pqina.nl/filepond/]
                  .card-body
                    input(type='file' class="no-preview")
              .col-lg-6
                .card
                  .card-header
                    h4 Image Preview 
                    p.f-m-light.mt-1
                      | We use the create method to turn a
                      code  &lt;input type="file"&gt;
                      |  into a FilePond drop area.
                      code [https://pqina.nl/filepond/]
                  .card-body
                    input(type='file' class="show-preview")
              .col-lg-6
                .card
                  .card-header 
                    h4 Single File Upload
                    p.f-m-light.mt-1
                    | Use the 
                    code .dropzone 
                    |  class through create upload files.
                    code [https://www.dropzone.dev/].
                  .card-body
                    form#singleFileUpload.dropzone.bg-light-primary(action='/upload.php')
                      .dropzone-wrapper
                        .dz-message.needsclick
                          i.icon-cloud-up
                          h6.f-w-600 Drop files here or click to upload.
                          span.note.needsclick
                            | (This is just a demo dropzone. Selected files are 
                            strong not
                            |  actually uploaded.)
              .col-lg-6
                .card
                  .card-header
                    h4 Multi File Upload
                    p.f-m-light.mt-1
                      | Use the 
                      code .dropzone 
                      |  class through create upload files.
                      code [https://www.dropzone.dev/].
                  .card-body
                    form#multiFileUpload.dropzone.dropzone-secondary.bg-light-secondary(action='/upload.php')
                      .dz-message.needsclick
                        i.icon-cloud-up
                        h6.f-w-600 Drop files here or click to upload.
                        span.note.needsclick
                          | (This is just a demo dropzone. Selected files are 
                          strong not
                          |  actually uploaded.)
          // Container-fluid Ends
        include ../../components/footer
    include ../../components/footer-files
